<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<%= check_box_tag "task_ids[]", @task.id, checked: @task.completed? %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", edit_task_path(@task) %>

<% if @task.completed? %>
  <p>This task has been completed.</p>
<% else %>
  <p>This task has not been completed yet.</p>
<% end %>
